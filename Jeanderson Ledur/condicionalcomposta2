// ELSE SIGNIFICA SENAO executa outro codigo

let paisdeorigem

if ( paisdeorigem === "brasil") {
    console.log ("voce é brasileiro")
} else if (paisdeorigem ===  "russia") {
    console.log ("Voce é russo")
} else if (paisdeorigem ===  "mexico") {
    console.log ("Voce é mexicano")
} else if (paisdeorigem ===  "americano") {
console.log ("Voce é americano")
} else if (paisdeorigem ===  "italia"){
console.log ("Voce é italiano")
} else {
console.log ( "nacionalidade nao encontrada")
}






